{
  "builds": [
    {
      "src": "main/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main/wsgi.py"
    }
  ],
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "main.settings",
      "PYTHONUNBUFFERED": "true"
    },
    "functions": { "api": { "runtime": "python3.12" } },
    "command": "./run.sh $@"
  }
}
